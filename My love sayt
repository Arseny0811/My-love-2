<main>
  <section id="home">
    <h1>моя любовь к тебе вечна</h1>
  </section>

  <section id="reasons" style="display:none;">
    <h2>101 причина, почему я люблю тебя</h2>
    <ol id="reasonsList"></ol>
  </section>
</main>

<script>
  const btnReasons = document.getElementById('btnReasons');
  const homeSection = document.getElementById('home');
  const reasonsSection = document.getElementById('reasons');
  const reasonsList = document.getElementById('reasonsList');

  const reasons = [
    "Ты делаешь меня счастливым(ой).",
    "Твоя улыбка озаряет мой день.",
    "Ты понимаешь меня без слов.",
    "С тобой я чувствую себя в безопасности.",
    "Ты вдохновляешь меня становиться лучше.",
    "Твоя доброта не знает границ.",
    "Ты поддерживаешь меня в трудные моменты.",
    "Твои глаза — как звезды в ночи.",
    "Ты умеешь слушать и слышать.",
    "С тобой каждый момент особенный.",
    // ... (добавлю еще 91 причину ниже)
  ];

  // Добавим еще 91 причину (примерные, чтобы заполнить список)
  for(let i = 11; i <= 101; i++) {
    reasons.push(`Причина номер ${i}: Ты уникален(на) и неповторим(а).`);
  }

  btnReasons.addEventListener('click', () => {
    homeSection.style.display = 'none';
    reasonsSection.style.display = 'block';
    if (reasonsList.children.length === 0) {
      reasons.forEach(reason => {
        const li = document.createElement('li');
        li.textContent = reason;
        reasonsList.appendChild(li);
      });
    }
  });
</script>

